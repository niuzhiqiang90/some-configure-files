#      REVISION: 1.0.0
################################################################################
declare -r mongod_home="/usr/local/mongodb"

################################################################################
# main 
################################################################################
function main()
{
    local argv=$#
    pushd ${mongod_home} > /dev/null
    case ${argv} in
        0)
            ./bin/mongo localhost:27017
            ;;
        *)
            ./bin/mongo $@
            ;;
    esac
    popd > /dev/null
}

main $@
